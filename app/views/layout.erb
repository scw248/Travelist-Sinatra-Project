<!doctype html>
<html>
  <head>
    <title>TRAVELIST</title>
    <link rel="stylesheet" href="styles.css">
    <meta charset="UTF-8">
    <meta name="description" content="Pinterest for Travelers">
    <meta name="keywords" content="Travel, Destinations, Trips">
    <meta name="author" content="Stephen Wright">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>
  <body>

   
    <header>
    <div align="center">
      <h1>Travelist</h1>
    
     <% if logged_in? %>
    
     <h3>Welcome, <%=current_user.username %>!</h3>
        <nav>  
          <a href="/users/<%=current_user.id%>">View My Destinations</a>
          <a href="/destinations/new">Create New Destination</a>
          <div align='right'>
            <a href="/logout"> Log Out </a>
          </div>
        </nav>

    </div> 
    </header>
     <hr>   

    <% flash.keys.each do |type| %>
  <div data-alert class="flash <%= type %> alert-box radius">
    <%= flash[type] %>
    <a href="#" class="close">&times;</a>
  </div>
    <% end %>

        <%= yield %>

        <hr>
        <h3 align='center'>All Posted Destinations</h3>

        <% Destination.all.each do |destination|%>
        <div class='card'>
            <%= destination.name %>
            <br>
            <p><%= destination.description %></p>
            <br>
            Ranking <%= destination.star_ranking %> 
            <br>
            <img src="<%= destination.image %>">
            <br>
          <% end %>
        </div>

        <br>
        
        
      <% else %>
      <a href="/login"> Log In </a>
      <br>
      <a href="/signup">Sign Up</a>
      <%end %>

        <%# <div align='center'> %>
        <footer>
        <nav>  
          <a href="/users/<%=current_user.id%>">View My Destinations</a>
          <a href="/destinations/new">Create New Destination</a>
        </nav>
        </footer>
        <%# </div> %>
  </body>
</html>