<!doctype html>
<html>
  <head>
    <title>TRAVELIST</title>
    <link rel="stylesheet" href="">
  </head>
  <body>

    <div align="center">
      <h1>Travelist</h1>
    
     <% if logged_in? %>
    
     <h3>Welcome, <%=current_user.username %>!</h3>
       
          <a href="/users/<%=current_user.id%>">View My Destinations</a>
          <a href="/destinations/new">Create New Destination</a>
        </nav>

   </div>    

        <%= yield %>
        <h4>All Posted Destinations!</h4>

        <p><% Destination.all.each do |destination|%>
            <%= destination.name %>
            <br></br>
            <%= destination.description %>
            <br></br>
            <%= destination.star_ranking %>
            <br></br>
            <img src="<%= destination.image %>">
            <br></br>
          <% end %>

        <br></br>
        <a href="/logout"> Log Out </a>

      <% else %>
      <a href="/login"> Log In </a>
      <br></br>
      <a href="/signup">Sign Up</a>
      <%end %>

        <%= yield %>
  </body>
</html>